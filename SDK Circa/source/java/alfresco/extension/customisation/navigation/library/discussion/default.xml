<alfresco-config area="navigation-custom">

    <!--
        Define all default custom navigation options.
    -->
    <config evaluator="string-compare" condition="Custom Navigation Preference">
        <preference>
	    	<rowView>30</rowView>
	    	<displayActions>true</displayActions>
	    	<linkDestination>browse</linkDestination>
	    	<viewMode>circa</viewMode>
			<actionConfig>newsgroup_browse_topic_actions_wai</actionConfig>
			<initialSortColumn>titleOrName</initialSortColumn>
			<initialSortDescending>false</initialSortDescending>
			<columns>
				<column>titleOrName</column>
				<column>replies_number</column>
			</columns>
		</preference>
	</config>
</alfresco-config>


